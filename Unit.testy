class Test(unittest.TestCase):
    """Class tests."""

    def test_sifrovania(self):
        """Unit test pre sifrovaciu funkciu."""
        vstup = unittest.sifrovania("test")
        self.assertEqual(vstup, "- . ... - ")

    def test_sifrovania_1(self):
        """Unit test pre sifrovaciu funkciu."""
        vstup = unittest.sifrovani("1, 2, 3, 4")
        self.assertEqual(vstup, ".---- --..--  "
                                "..--- --..--  ...-- --..--  ....- ")

    def test_sifrovania_2(self):
        """Unit test pre sifrovaciu funkciu."""
        vstup = unittest.sifrovania("text s mezerami")
        self.assertEqual(vstup, "- . -..- -  ...  -- . --.. . .-. .- -- .. ")

    def test_sifrovania_3(self):
        """Unit test pre sifrovaciu funkci."""
        vstup = unittest.sifrovania(",? )( !")
        self.assertEqual(vstup, "--..-- ..--..  -.--.- -.--.  -.-.-- ")

    def test_desifrovania(self):
        """Unit test pro desifrovaciu funkciu."""
        vstup = unittest.desifrovania("- . ... -")
        self.assertEqual(vstup, "TEST")

    def test_desifrovania_1(self):
        """Unit test pro desifrovaciu funkciu."""
        vstup = unittest.desifrovania("----- -----  .----  ..---  ...--  ....-")
        self.assertEqual(vstup, "00 1 2 3 4")

    def test_desifrovania_2(self):
        """Unit test pro desifrovaciu funkciu."""
        vstup = unittest.desifrovania(".-.-.- --..-- ..--.. -.-.-- -.--."
                                   "- -.--. -..-.")
        self.assertEqual(vstup, ".,?!)(/")

    def test_sifrovania_4(self):
        """Unit test pro desifrovaciu funkciu."""
        vstup = unittest.desifrovania("TEST VELKYCH PISMEN")
        self.assertEqual(vstup, "- . ... -  ...- . .-.. -.- "
                                "-.-- -.-. ....  .--. .. ... -- . -. ")
